{
  "manifest_version": 2,
  "name": "imho",
  "description": "Hide articles from obnoxious New York Times opinion writers",
  "version": "0.1.4",
  "options_page": "options.html",
  "background": {
    "scripts": ["event.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://www.nytimes.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "permissions": ["storage"]
}
